import 'package:flutter/material.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: NumbersScreen(),
    );
  }
}

class NumbersScreen extends StatelessWidget {
  NumbersScreen({super.key});
  // Predefined list of 6 integers
  final List<int> numbers = [12, 7, 5, 20, 3, 15];

  int getSumOfOdds() {
    int sum = 0;
    for (int n in numbers) {
      if (n % 2 != 0) {
        sum += n;
      }
    }
    return sum;
  }

  int getSmallestNumber() {
    int smallest = numbers[0];
    for (int n in numbers) {
      if (n < smallest) {
        smallest = n;
      }
    }
    return smallest;
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text("Dart List & Conditions"),
        centerTitle: true,
      ),
      body: Padding(
        padding: const EdgeInsets.all(20),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Text("Numbers: $numbers",
                style: const TextStyle(fontSize: 18)),
            const SizedBox(height: 10),
            Text("Sum of Odd Numbers: ${getSumOfOdds()}",
                style: const TextStyle(fontSize: 18)),
            const SizedBox(height: 10),
            Text("Smallest Number: ${getSmallestNumber()}",
                style: const TextStyle(fontSize: 18)),
          ],
        ),
      ),
    );
  }
}

